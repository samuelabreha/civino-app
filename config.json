{
  "version": "2.0.0",
  "environment": "production",
  "api": {
    "baseUrl": "https://api.civino.app",
    "timeout": 30000,
    "retryAttempts": 3,
    "cacheTimeout": 3600
  },
  "features": {
    "imageEvaluation": true,
    "behavioralContracts": true,
    "progressReports": true,
    "realTimeSync": true,
    "offlineMode": true,
    "automaticBackup": true
  },
  "theme": {
    "primaryColor": "#4A90E2",
    "secondaryColor": "#F5A623",
    "fontFamily": "PlusJakartaSans",
    "darkMode": true,
    "animations": true
  },
  "security": {
    "tokenExpiration": 86400,
    "maxLoginAttempts": 5,
    "twoFactorAuth": true,
    "passwordPolicy": {
      "minLength": 8,
      "requireSpecialChars": true,
      "requireNumbers": true
    }
  },
  "performance": {
    "imageCaching": true,
    "dataCompression": true,
    "lazyLoading": true
  }
}
